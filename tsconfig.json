{
  "compilerOptions": {
    "types": ["jest"],
    "noImplicitAny": true,
    "outDir": "./dist/",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "./src/**/*"
  ]
}